@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glömt lösenord";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="col-12 col-md-10 mx-auto my-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label text-dark"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-color justify-content-md-end">Återställ lösenord</button>
        </div>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
