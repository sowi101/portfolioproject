@model projectportfolio.Models.Project

@{
    ViewData["Title"] = "Detaljer för " + Model.Title;
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Published)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InitialDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InitialDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TechnicalDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TechnicalDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OptionalDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OptionalDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MockupImg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MockupImg.AltText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LogoImg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LogoImg.AltText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DetailImg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DetailImg.AltText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Competences)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var compItem in Model.Competences)
                {
                    <li>
                        @Html.DisplayFor(modelItem => compItem.Name)
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProjectId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
