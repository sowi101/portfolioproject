@model projectportfolio.Models.Experience

@{
    // Save title to ViewData
    ViewData["Title"] = "Lägg till ny utbildning / nytt jobb";
}

<h1>@ViewData["Title"]</h1>
<hr />

<!-- Form to add a new experience -->
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-12 col-md-6">
            <label asp-for="What" class="control-label fw-bold"></label>
            <input asp-for="What" class="form-control" />
            <span asp-validation-for="What" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-6">
            <label asp-for="Where" class="control-label fw-bold"></label>
            <input asp-for="Where" class="form-control" />
            <span asp-validation-for="Where" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-12 col-md-4">
            <label asp-for="Start" class="control-label fw-bold"></label>
            <input asp-for="Start" class="form-control" />
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="End" class="control-label fw-bold"></label>
            <input asp-for="End" class="form-control" />
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="CategoryId" class="control-label fw-bold"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                <option value="">Välj kategori</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label fw-bold"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <!-- Buttons with link and to submit form -->
    <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-color-secondary fw-bold" asp-action="Index">TILLBAKA TILL LISTA</a>
        <input type="submit" value="LÄGG TILL" class="btn btn-color fw-bold" />            
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
