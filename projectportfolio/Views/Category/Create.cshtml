@model projectportfolio.Models.Category

@{
    ViewData["Title"] = "Lägg till ny kategori";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-12 col-md-6">
                    <label asp-for="Name" class="control-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label asp-for="AreaOfUse" class="control-label fw-bold"></label>
                    <input asp-for="AreaOfUse" class="form-control" />
                    <span asp-validation-for="AreaOfUse" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-color-secondary fw-bold" asp-action="Index">Tillbaka till lista</a>
                <input type="submit" value="Lägg till" class="btn btn-color fw-bold" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
