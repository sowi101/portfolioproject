@model projectportfolio.Models.Image

@{
    ViewData["Title"] = "Detaljer för bilden " + Model.Name;
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-12 col-md-4">
        <dl class="row">
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.AltText)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.AltText)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.CategoryId)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
        </dl>
    </div>

    <div class="col-12 col-md-8">
        <img class="img-fluid" src="~/uploads/@Html.DisplayFor(model => model.Name)" />
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ImageId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>