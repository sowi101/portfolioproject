@model projectportfolio.Models.Competence

@{
    ViewData["Title"] = "Ändra kompetens " + Model.Name;
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="">
    <div class="">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompetenceId" />
            <div class="row">
                <div class="form-group col-12 col-md-6">
                    <label asp-for="Name" class="control-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label asp-for="CategoryId" class="control-label fw-bold"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Spara ändringar" class="btn btn-primary fw-bold" />
                <a class="btn btn-primary fw-bold" asp-action="Index">Tillbaka till lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
